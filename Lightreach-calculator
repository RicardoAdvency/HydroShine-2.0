  <script>
    const WA_NUMBER = "17874005116"; // +1 787 400 5116
    const BRAND = "HydroShine";

    const enc = encodeURIComponent;
    const waLink = (text) => `https://wa.me/${WA_NUMBER}?text=${enc(text)}`;
    const openWA = (text) => window.open(waLink(text), "_blank");

    function bookMessage(pkg="Full Clean"){
      return `Hola, quiero reservar con ${BRAND}.\n\n` +
             `‚Ä¢ Paquete: ${pkg}\n` +
             `‚Ä¢ Ubicaci√≥n/pueblo: \n` +
             `‚Ä¢ Veh√≠culo (sed√°n/SUV/pickup): \n` +
             `‚Ä¢ Fecha/hora preferida: \n\n` +
             `¬øDisponibilidad esta semana?`;
    }
    function photosMessage(){
      return `Hola, quiero una cotizaci√≥n con ${BRAND}.\n\n` +
             `Voy a enviarte 4 fotos:\n` +
             `1) Frente\n2) Asientos\n3) Alfombras\n4) Ba√∫l\n\n` +
             `Ubicaci√≥n/pueblo: \nVeh√≠culo: \nCita preferida: `;
    }

    document.getElementById("ctaTop").addEventListener("click", (e)=>{e.preventDefault(); openWA(bookMessage("Full Clean"));});
    document.getElementById("btnBook").addEventListener("click", ()=> openWA(bookMessage("Full Clean")));
    document.getElementById("btnBook2").addEventListener("click", ()=> openWA(bookMessage("Full Clean")));
    document.getElementById("ctaBottom").addEventListener("click", ()=> openWA(bookMessage("Full Clean")));
    document.getElementById("btnPhotos").addEventListener("click", ()=> openWA(photosMessage()));
    document.getElementById("btnPhotos2").addEventListener("click", ()=> openWA(photosMessage()));

    document.querySelectorAll("[data-pkg]").forEach(btn=>{
      btn.addEventListener("click", ()=> openWA(bookMessage(btn.getAttribute("data-pkg"))));
    });

    const selected = new Set();
    document.getElementById("chips").addEventListener("click", (e)=>{
      const el = e.target.closest(".chip2");
      if(!el) return;
      const addon = el.getAttribute("data-addon");
      el.classList.toggle("active");
      if(selected.has(addon)) selected.delete(addon); else selected.add(addon);
    });

    document.getElementById("btnSendAddons").addEventListener("click", ()=>{
      const list = [...selected];
      const text =
        `Hola, quiero reservar con ${BRAND}.\n\n` +
        `Extras seleccionados:\n` +
        (list.length ? list.map(a=>`‚Ä¢ ${a}`).join("\n") : "‚Ä¢ Ninguno por ahora") +
        `\n\nUbicaci√≥n/pueblo: \nVeh√≠culo: \nCita preferida: `;
      openWA(text);
    });

    document.getElementById("year").textContent = new Date().getFullYear();
  </script>
